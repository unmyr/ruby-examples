{
  "[json]": {
    "editor.tabSize": 2,
    "editor.detectIndentation": true,
    "editor.insertSpaces": true
  },
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.detectIndentation": true,
    "editor.insertSpaces": true
  },
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    }
  },
  "ruby.format": "rubocop",
  "cSpell.words": [
    "adoc",
    "adocbuild",
    "leveloffset",
    "rubocop",
    "tonynv"
  ]
}